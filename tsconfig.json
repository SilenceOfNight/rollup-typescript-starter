{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
